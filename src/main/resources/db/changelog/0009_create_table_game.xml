<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.2.xsd">
    <changeSet id="0009-1" author="dominik">
        <createTable tableName="game">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="title" type="VARCHAR(99)"/>
            <column name="short_description" type="VARCHAR(320)"/>
            <column name="dailymotion_Trailer_Id" type="VARCHAR(30)"/>
            <column name="promoted" type="boolean"/>
            <column name="poster" type="VARCHAR(100)"/>
            <column name="small_Poster_Suggestion" type="VARCHAR(100)"/>
            <column name="big_Poster_Suggestion" type="VARCHAR(100)"/>
            <column name="producer_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_game_producer"
                             referencedTableName="company"
                             referencedColumnNames="id"/>
            </column>
            <column name="publisher_id" type="BIGINT">
                <constraints nullable="false"
                             foreignKeyName="fk_game_publisher"
                             referencedTableName="company"
                             referencedColumnNames="id"/>
            </column>
            <column name="description" type="MEDIUMTEXT">
                <constraints nullable="false"/>
            </column>
            <column name="min_players" type="INTEGER">
            </column>
            <column name="max_players" type="INTEGER">
            </column>


        </createTable>
    </changeSet>
</databaseChangeLog>